
@{
    ViewBag.Title = "Employees";
}
@Scripts.Render("~/scripts/Employees/js")
<div class="form-wrapper">

    <div class="container">
      
        <div class="page-header">
            <div class="row">
                <div class="col-md-10">
                    <h1>
                        Employee List
                    </h1>
                </div>
                <div class="col-md-2" style="text-align: right;">
                   @* <button type="button" class="" >Add Employee</button>*@
                    @Ajax.ActionLink("Add Employee", "AddEmployee", "Employee", null, null, new { @class = "btn btn-primary", @style = "margin-top: 20px;" })
                </div>
            </div>
            
        </div>
        <div class="card-body">
            <div class="list-items-wrapper">
                <table class="list-items table w-100" id="EmployeeListContent">
                    <thead>
                        <tr>
                        @*    <th>Id</th>*@
                            <th>Name</th>
                            <th>Age</th>
                            <th>Marital Status</th>
                            <th>Salary</th>
                            <th>Location</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
        </div>
    </div>

<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="overflow-y: hidden;">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
@using (Html.BeginForm("Delete", "Employee", FormMethod.Post, new { name = "deliveryAccounting", id = "frmdeliveryAccounting", @autocomplete = "off" }))
{
    @Html.Hidden("EmployeeID");
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete: <span class="description"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
                <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
            </div>
}
 
        </div>

      </div>
    </div>

<script type="text/javascript">
    $(document).ready(function () {
        //debugger

        if ('@ViewBag.sucessMessage' != "") {
            toastr.success('@ViewBag.sucessMessage', { timeOut: 3000 });
        }
        if ('@ViewBag.errorMessage' != "") {
            toastr.error('@ViewBag.sucessMessage', { timeOut: 3000 });
        }
        else { }
    });
    </script>